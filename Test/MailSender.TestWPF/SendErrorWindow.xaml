<Window x:Class="MailSender.TestWPF.SendErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.TestWPF"
        mc:Ignorable="d"
        Title="SendErrorWindow" Height="173" Width="400" ResizeMode="NoResize"  WindowStartupLocation="CenterOwner" BorderBrush="Black" BorderThickness="1" WindowStyle="None">
	<Grid>
		<TextBlock Width="350" Height="Auto" Foreground="Red" Name="txtblError" TextWrapping="Wrap" Margin="25,25,25,60"></TextBlock>
		<Button Name="btnOk" Content="OK" Margin="0,0,50,20" Width="85" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btnOk_Click"/>
	</Grid>
</Window>
