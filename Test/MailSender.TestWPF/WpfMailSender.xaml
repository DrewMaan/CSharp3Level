<Window x:Class="MailSender.TestWPF.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.TestConsole"
        mc:Ignorable="d"
        Title="WpfMailSender" Height="450" Width="800">
	<Grid>
		<Slider Margin="50,10" Minimum="0" Maximum="700" VerticalAlignment="Top" Name="HorizontalPosition"/>
		<Slider Orientation="Vertical" Margin="10, 50" Minimum="0" Maximum="330" HorizontalAlignment="Left" Name="VerticalPosition"/>
		<Canvas Margin="50">
			<Ellipse RenderTransformOrigin="0.5, 0.5" Width="80" Height="40" 
			         Fill="Red" StrokeThickness="2" Stroke="DarkBlue"
			         Canvas.Left="{Binding Value, ElementName=HorizontalPosition}" 
			         Canvas.Bottom="{Binding Value, ElementName=VerticalPosition}"/>
		</Canvas>
	</Grid>
</Window>
