<Window x:Class="MailSender.Views.SchedulerItemEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.Views"
		xmlns:vm="clr-namespace:MailSender.ViewModels"
        d:DataContext="{d:DesignInstance vm:SchedulerItemEditDialogViewModel, IsDesignTimeCreatable=True}"
        Title="SchedulerItemEditDialog" Height="260" Width="450">
	<DockPanel>
		<UniformGrid DockPanel.Dock="Bottom"
		             Rows="1" HorizontalAlignment="Right"
		             Margin="0,10,10,10">
			<Button Content="Ok" IsDefault="True" Margin="0,0,3,0" Height="25" Width="80"
			        Command="{Binding OkCommand}"/>
			<Button Content="Cancel" IsCancel="True"
			        Command="{Binding CancelCommand}"/>
		</UniformGrid>
		<GroupBox Header="Текст сообщения">
			<TextBox Text="{Binding MessageBody}"/>
		</GroupBox>
	</DockPanel>
</Window>
